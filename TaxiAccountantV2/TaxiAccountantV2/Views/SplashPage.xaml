									Source = "loading.gif"
									WidthRequest="50"
									HeightRequest="50"
                                    x:Name="loadingGIF">
		</ffimageloading:CachedImage>
        -->

        <ffimageloading:CachedImage HorizontalOptions="Center" 
									VerticalOptions="Center"
									DownsampleToViewSize="true"
									Source = "taxi.png"
									WidthRequest="100"
									HeightRequest="100"
                                    x:Name="carImage">
        </ffimageloading:CachedImage>

        <!--
        <ActivityIndicator HorizontalOptions="CenterAndExpand" 
                           VerticalOptions="CenterAndExpand" 
                           Color="Black" 
                           IsRunning="True"
                           x:Name="loadingGIF"
                           Margin="0,150,0,0"/>
        -->
        
        <Label Text="Warming up...." 
               FontSize="Title" 
               FontAttributes="Bold"
			   VerticalTextAlignment="Center"
			   VerticalOptions="CenterAndExpand"
			   HorizontalTextAlignment="Center"
			   HorizontalOptions="CenterAndExpand"
			   Margin="0,35,0,0"
			   TextColor="Black"
               x:Name="textLogo"/>

	</StackLayout>

</ContentPage>